<?xml version="1.0" encoding="UTF-8"?>

<web-fragment metadata-complete="true" version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-fragment_3_0.xsd">

    <context-param>
        <param-name>shiroConfigLocations</param-name>
        <param-value>classpath:default-embryo-shiro.ini</param-value>
    </context-param>

    <listener>
        <listener-class>org.apache.shiro.web.env.EnvironmentLoaderListener</listener-class>
    </listener>

    <filter>
        <filter-name>ShiroFilter</filter-name>
        <filter-class>org.apache.shiro.web.servlet.ShiroFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>ShiroFilter</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
        <dispatcher>ERROR</dispatcher>
    </filter-mapping>

    <filter>
        <filter-name>UserAgentLoggingFilter</filter-name>
        <filter-class>dk.dma.embryo.user.log.UserAgentLoggingFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>UserAgentLoggingFilter</filter-name>
        <url-pattern>/rest/authentication/login</url-pattern>
    </filter-mapping>

</web-fragment>
    